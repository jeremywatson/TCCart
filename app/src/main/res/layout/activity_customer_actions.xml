<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/customerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Customer"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <Button
            android:id="@+id/startTransaction"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Start Transaction"/>

        <Button
            android:id="@+id/viewEditCustomer"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/startTransaction"
            android:layout_alignStart="@+id/startTransaction"
            android:layout_below="@+id/startTransaction"
            android:layout_marginTop="30dp"
            android:text="View/Edit Customer"/>

        <Button
            android:id="@+id/viewCustomerTransactions"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewEditCustomer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="View Customer Transactions"/>

        <Button
            android:id="@+id/goToMain"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/viewCustomerTransactions"
            android:layout_alignStart="@+id/viewCustomerTransactions"
            android:layout_below="@+id/viewCustomerTransactions"
            android:layout_marginTop="30dp"
            android:text="Go to Main"/>

        <TextView
            android:id="@+id/customerActionsErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:text="Error Message Area"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </RelativeLayout>
</LinearLayout>